<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="Save Lot Number?"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <Button
        android:id="@+id/save_lot_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="66dp"
        android:layout_marginStart="38dp"
        android:layout_below="@+id/lot_number_text"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/skip_lot_button"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:text="Skip"
        android:layout_above="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/lot_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Enter lot number"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/skip_lot_button" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/save_lot_button"
        android:layout_marginTop="59dp" />
</RelativeLayout>